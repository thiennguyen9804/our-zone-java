<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#D0E2DE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:textSize="45sp"
        android:textFontWeight="800"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal|top"
        android:shadowRadius="4"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowColor="#40000000"
        android:text="@string/welcome_back"
        android:textColor="#fff"
        android:textAppearance="@style/sign_up"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#fff"
        android:maxWidth="400dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up">

        <EditText
            android:id="@+id/accountEditText"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Number Phone/Email Address"
            android:letterSpacing="0.1"
            android:paddingStart="21dp"
            android:textColor="#626262"
            android:textColorHint="#626262"
            android:textFontWeight="500"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:letterSpacing="0.1"
            android:paddingStart="21dp"
            android:textColor="#626262"
            android:textColorHint="#626262"
            android:textFontWeight="400"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/forgotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="15dp"
            android:text="Forgot Password"
            android:textColor="#738F81"
            android:textSize="11sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:layout_marginLeft="9dp"
                android:textFontWeight="600"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#fff"
        android:text="Cancel"
        android:textColor="#738F81"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/logInButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:strokeColor="#949494"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#738F81"
        android:text="Log in"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/signupTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="52dp"
        android:text="@string/dont"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>