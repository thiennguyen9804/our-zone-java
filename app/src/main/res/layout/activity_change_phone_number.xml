<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePhoneNumber"
    android:background="#F8FFF8">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vector_arrow_back"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/textChangePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="270dp"
        android:text="Edit your phone number"
        android:textAppearance="@style/topicOfScreen"
        android:fontFamily="@font/opensans_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <FrameLayout
        android:id="@+id/frmChangePhoneNumber"
        android:layout_width="309dp"
        android:layout_height="42dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:id="@+id/lblHeaderNumber"
            android:layout_width="92dp"
            android:layout_height="42dp"
            android:background="@drawable/text_viet_nam"
            />

        <ImageView
            android:id="@+id/imgVietNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_vietnam"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/nmbHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+84"
            android:textAppearance="@style/textHeaderNbr"
            android:fontFamily="@font/opensans_semibold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            />

        <EditText
            android:id="@+id/txbChangePhoneNumber"
            android:layout_width="217dp"
            android:layout_height="42dp"
            android:hint="12.345.6789"
            android:layout_marginLeft="91.5dp"
            android:background="@drawable/edit_phone_number"
            android:textAppearance="@style/textPhoneNumber"
            android:paddingStart="10dp"
            android:fontFamily="@font/opensans_semibold"
            />

    </FrameLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginLeft="146dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/btn_save"
        android:text="Save"
        android:textAppearance="@style/textInBtn"
        android:fontFamily="@font/opensans_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />
    />
</androidx.constraintlayout.widget.ConstraintLayout>