<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/avatar_circle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/circle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />


    <Button
        android:backgroundTint="#F8FFF8"
        android:textStyle="bold"
        android:textColor="#738F81"
        tools:text="HBT"
        android:id="@+id/name"
        android:layout_width="160dp"
        android:layout_height="23dp"
        android:layout_toEndOf="@id/avatar_circle"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/avatar_circle"
        android:layout_alignBottom="@id/avatar_circle"
        android:layout_marginStart="10dp" />

    <Button
        android:textAppearance="@style/accept"
        android:text="@string/accept"
        android:layout_toEndOf="@id/name"
        android:textStyle="bold"

        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:id="@+id/accept_btn"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:background="@drawable/dlt_btn"
        android:textColor="#2D2D2D"

        />


    <ImageView
        tools:src="@drawable/avatar1"

        android:layout_margin="3dp"

        android:id="@+id/image"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignStart="@id/avatar_circle"
        android:layout_alignEnd="@id/avatar_circle"
        android:layout_alignTop="@id/avatar_circle"
        android:layout_alignBottom="@id/avatar_circle"
        android:contentDescription="@string/friendimage" />
</RelativeLayout>
